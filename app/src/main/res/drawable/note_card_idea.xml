<?xml version="1.0" encoding="utf-8"?>
<!-- Fikir Notu Kartı - Kite Design -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradient arka plan -->
    <gradient
        android:angle="135"
        android:startColor="#FFE66D"
        android:endColor="#FFED85"
        android:type="linear" />
    
    <!-- Köşeler -->
    <corners android:radius="16dp" />
    
    <!-- Gölge -->
    <stroke
        android:width="2dp"
        android:color="#FFD93D" />
        
</shape>



